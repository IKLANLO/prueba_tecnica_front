<Window x:Class="prueba_tecnica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prueba_tecnica"
        mc:Ignorable="d"
        Title="Prueba técnica" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="TextInput" HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" Text="" Width="332"/>
            <Button x:Name="SaveNoteButton" Content="Guardar nota" HorizontalAlignment="Left" Margin="20,10,0,0" RenderTransformOrigin="-1.264,1.826" Click="SaveNoteButton_Click" Width="93"/>
            <Button x:Name="ReadNoteButton" Content="Leer nota" HorizontalAlignment="Left" Margin="130,-20,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.345,0.439" Click="ReadNoteButton_Click"/>
            <Button x:Name="DeleteNoteButton" Content="Borrar nota" HorizontalAlignment="Left" Margin="200,-20,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.345,0.439" Click="DeleteNoteButton_Click"/>
            <StackPanel x:Name="LabelContainer" Orientation="Vertical" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
